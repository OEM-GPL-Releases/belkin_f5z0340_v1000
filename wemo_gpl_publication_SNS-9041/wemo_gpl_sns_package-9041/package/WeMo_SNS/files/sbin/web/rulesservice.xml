                <relatedStateVariable>Mon</relatedStateVariable>
                <direction>in</direction>
            </argument>
	        <argument>
                <retval />
                <name>Tues</name>
                <relatedStateVariable>Tues</relatedStateVariable>
                <direction>in</direction>
            </argument>
	        <argument>
                <retval />
